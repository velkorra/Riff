@model LoginViewModel

<div class="min-h-screen flex items-center justify-center bg-black">
    <div class="w-full max-w-md p-8 bg-neutral-800 rounded-xl border border-neutral-700">
        <h1 class="text-2xl font-bold mb-6 text-center text-purple-400">RIFF Sign In</h1>
        
        <!-- Это стандартная форма MVC -->
        <form asp-route="Login" method="post" class="space-y-4">
            <input type="hidden" asp-for="ReturnUrl" />

            <div>
                <input class="w-full p-3 bg-neutral-900 rounded border border-neutral-700 focus:border-purple-500 outline-none text-white" 
                       placeholder="Username" 
                       asp-for="Username" autofocus>
            </div>
            
            <div>
                <input type="password" class="w-full p-3 bg-neutral-900 rounded border border-neutral-700 focus:border-purple-500 outline-none text-white" 
                       placeholder="Password" 
                       asp-for="Password" autocomplete="off">
            </div>

            <button name="button" value="login" class="w-full p-3 bg-purple-600 hover:bg-purple-700 rounded font-bold transition text-white">
                Sign In
            </button>
        </form>
        
        <div class="mt-4 text-center">
            <a href="@Url.Action("Register", new { returnUrl = Model.ReturnUrl })" class="text-sm text-neutral-400 hover:text-white">
                Need an account? Register
            </a>
        </div>
    </div>
</div>